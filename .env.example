# Flask Environment Configuration
# Set to 'production' for production deployments, 'development' for local development
FLASK_ENV=production

# Database Configuration
# Path to the SQLite database file (will be created if it doesn't exist)
DATABASE_PATH=scubascore.db

# Autoload Directory Configuration
# Directory where JSON files will be automatically processed
AUTOLOAD_DIR=autoload

# Server Configuration
# Port on which the Flask application will listen
PORT=5000

# Host to bind to (0.0.0.0 allows external connections, 127.0.0.1 for localhost only)
HOST=0.0.0.0

# Gunicorn Configuration (Production WSGI Server)
# Number of worker processes for handling requests
# Recommended: (2 x num_cores) + 1
GUNICORN_WORKERS=4

# Request timeout in seconds
GUNICORN_TIMEOUT=120

# Log Configuration
# Set to 1 to enable unbuffered Python output for better logging in containers
PYTHONUNBUFFERED=1

# Configuration Files
# Paths to YAML configuration files (optional - defaults to current directory)
# WEIGHTS_CONFIG=weights.yaml
# SERVICE_WEIGHTS_CONFIG=service_weights.yaml
# COMPENSATING_CONFIG=compensating.yaml
